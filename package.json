{
  "name": "soulbound",
  "version": "1.0.17",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "start:prod": "cross-env NODE_ENV=production electron .",
    "package:win": "cross-env NODE_ENV=production electron-packager . Soulbound --platform=win32 --arch=x64 --icon=icon.ico --overwrite",
    "package:mac": "cross-env NODE_ENV=production electron-packager . Soulbound --platform=darwin --arch=x64 --icon=icon.ico --overwrite",
    "package:linux": "cross-env NODE_ENV=production electron-packager . Soulbound --platform=linux --arch=x64 --icon=icon.ico --overwrite",
    "dist:win": "cross-env NODE_ENV=production electron-builder --windows nsis",
    "dist:mac": "cross-env NODE_ENV=production electron-builder --mac dmg",
    "dist:linux": "cross-env NODE_ENV=production electron-builder --linux AppImage",
    "test": "node tests/test.js"
  },
  "build": {
    "appId": "com.fynn9563.soulbound",
    "productName": "Soulbound",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^36.4.0",
    "electron-builder": "^24.6.0",
    "electron-packager": "^16.0.0"
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  }
}
